<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/insert_one_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="insert one"/>

    <Button
        android:id="@+id/insert_multi_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="insert multi"/>

    <Button
        android:id="@+id/delete_first_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete first"/>

    <Button
        android:id="@+id/delete_all_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="delete all"/>


    <Button
        android:id="@+id/update_first_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update first"/>

    <Button
        android:id="@+id/update_all_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="update all"/>

    <Button
        android:id="@+id/find_first_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="find first"/>

    <Button
        android:id="@+id/find_all_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="find all"/>
</LinearLayout>